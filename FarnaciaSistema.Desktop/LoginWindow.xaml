<Window x:Class="FarmaciaSistema.Desktop.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FarmaciaSistema.Desktop"
        mc:Ignorable="d"
        Title="Iniciar Sesión" Height="300" Width="400">

    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <Label Content="Seleccione Usuario:" FontWeight="Bold"/>
            <ComboBox x:Name="UsuariosComboBox" DisplayMemberPath="NombreUsuario" SelectedValuePath="Id" Margin="0,0,0,15"/>

            <Label Content="Contraseña:" FontWeight="Bold"/>
            <PasswordBox x:Name="PasswordInput" Margin="0,0,0,20"/>

            <Button Content="Iniciar Sesión" Click="LoginButton_Click" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
